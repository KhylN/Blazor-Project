@using EventEase.Models
@inherits ComponentBase

<div class="card p-3 mb-3 border rounded">
    <h3 class="mb-2">Event Editor</h3>
    <div class="mb-2">
        <label>Title</label>
        <InputText class="form-control" @bind-Value="Model.Title" />
    </div>
    <div class="mb-2">
        <label>Date</label>
        <InputDate class="form-control" @bind-Value="Model.Date" />
    </div>
    <div class="mb-2">
        <label>Location</label>
        <InputText class="form-control" @bind-Value="Model.Location" />
    </div>
    <div class="mb-2">
        <label>Description</label>
        <InputTextArea class="form-control" @bind-Value="Model.Description" />
    </div>

    <h5 class="mt-3">Preview</h5>
    <p><strong>@Model.Title</strong> — @Model.Date.ToShortDateString() — @Model.Location</p>
    <p>@Model.Description</p>
</div>

@code {
    [Parameter] public EventItem Model { get; set; } = new();
}
